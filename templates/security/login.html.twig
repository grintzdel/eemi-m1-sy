{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
<style>
    .login-container {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        max-width: 400px;
        margin: 3rem auto;
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    label {
        display: block;
        margin-bottom: 0.5rem;
        color: #2c3e50;
        font-weight: 500;
    }
    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
    }
    .error-message {
        background: #f8d7da;
        color: #721c24;
        padding: 1rem;
        border-radius: 4px;
        margin-bottom: 1rem;
    }
    .register-link {
        text-align: center;
        margin-top: 1.5rem;
        color: #666;
    }
    .register-link a {
        color: #3498db;
        text-decoration: none;
    }
    .register-link a:hover {
        text-decoration: underline;
    }
</style>

<div class="login-container">
    <h1 style="text-align: center; margin-bottom: 2rem;">Connexion</h1>

    {% if error %}
        <div class="error-message">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="username">Email</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-primary" style="width: 100%;">
            Se connecter
        </button>
    </form>

    <div class="register-link">
        Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
    </div>
</div>
{% endblock %}
